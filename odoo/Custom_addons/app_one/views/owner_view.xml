<odoo>
    <record id="owner_tree_view" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree multi_edit="True" create="1" edit="1" delete="1">
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>
    <record id="owner_form_view" model="ir.ui.view">
        <field name="name">owner view</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="1">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone" required="1"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="property_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">owner</field>
        <field name="res_model">owner</field>
    </record>
    <menuitem
            id="owner_menu_item"
            name="owners"
            parent="configuration_menu"
            action="owner_action"
    />
</odoo>