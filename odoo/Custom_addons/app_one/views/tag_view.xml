<odoo>
    <record id="tag_tree_view" model="ir.ui.view">
        <field name="name">tag tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree multi_edit="True" create="1" edit="1" delete="1">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="tag_form_view" model="ir.ui.view">
        <field name="name">tag view</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="1">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">tag</field>
        <field name="res_model">tag</field>
    </record>
    <menuitem
            id="tag_menu_item"
            name="Tags"
            parent="configuration_menu"
            action="tag_action"
    />
</odoo>